{
    "name": "quantaforge/pint",
    "description": "An opinionated code formatter for PHP.",
    "keywords": ["php", "format", "formatter", "lint", "linter"],
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Tomáš Selič (Smisch-DEV)",
            "email": "contact@smisch.sk"
        }
    ],
    "require": {
        "php": "^8.1.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-tokenizer": "*",
        "ext-xml": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.34.1",
        "quantaforge/view": "^1.0.0",
        "laravel-zero/framework": "^10.1.2",
        "mockery/mockery": "^1.6.6",
        "nunomaduro/larastan": "^2.6.4",
        "nunomaduro/termwind": "^1.15.1",
        "pestphp/pest": "^2.18.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Scripts\\": "scripts/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["builds/pint"]
}
